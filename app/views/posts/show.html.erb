<%- model_class = Post -%>
<div class="post-view">
  <div class="page-header">
    <h1><%= '$' +  @post.price.to_s + ': ' + @post.subject %></h1>
  </div>
  <p class="categories">
    <%  categories = @post.categories.to_a
        categories.each do |c|
          link_title = c.parent_category.name + ' >> '+ c.name %>
        <%=   link_to link_title, :action => 'index_front', :parent_category_id => c.parent_category, :category_id => c  %>,
  <%  end %><p>
  <p><%= @post.content %></p>
  <h3>Imagenes:</h3>
  <%= image_tag @post.image1.url(:thumb) %>
  <%= image_tag @post.image2.url(:thumb) %>
  <%= image_tag @post.image3.url(:thumb) %>
  <h3>Datos Personales:</h3>
  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
    <dd><%= @post.email %></dd>
    <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
    <dd><%= @post.name %></dd>
    <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
    <dd><%= @post.phone %></dd>
  </dl>


</div>

